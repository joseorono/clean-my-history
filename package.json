{
  "name": "clean-my-history",
  "displayName": "FocusSpace",
  "version": "0.0.1",
  "description": "A productivity workspace cleaner that removes distractions from your history and tabs, preparing you for deep work.",
  "author": " Jose Orono <joseomaker@gmail.com>",
  "scripts": {
    "dev": "plasmo dev",
    "dev-verbose": "plasmo dev --verbose",
    "build": "plasmo build",
    "test": "plasmo test",
    "dev-expose-host": "vite --host",
    "dev-expose-port": "vite --port",
    "format": "prettier --write .",
    "prettier-format": "prettier --config .prettierrc --write \"**/*.ts\" \"**/*.tsx\"",
    "prettier-watch": "onchange \"**/*.ts\" \"**/*.tsx\" -- prettier --write {{changed}}",
    "visualize-bundle": "vite-bundle-visualizer & vite-bundle-visualizer -t sunburst & vite-bundle-visualizer -t network",
    "check-updates": "ncu",
    "update-deps": "ncu -u && npm install",
    "prepare": "husky",
    "build-static-tailwind": "npx tailwindcss -i ./style.css -o ./style.css --minify"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  },
  "dependencies": {
    "@emotion/react": "^11.11.3",
    "@emotion/styled": "^11.11.0",
    "@fontsource/roboto": "^5.0.8",
    "@mui/base": "5.0.0-beta.31",
    "@mui/icons-material": "^5.15.4",
    "@mui/material": "^5.15.4",
    "@parcel/runtime-js": "^2.16.0",
    "@plasmohq/redux-persist": "^6.1.0",
    "@plasmohq/storage": "^1.15.0",
    "@preact/signals-react": "^2.0.0",
    "@reduxjs/toolkit": "^2.1.0",
    "@tanstack/react-query": "^5.59.19",
    "plasmo": "0.84.0",
    "prettier-plugin-tailwindcss": "^0.6.8",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-hot-toast": "^2.4.1",
    "react-redux": "^9.1.0",
    "redux": "^5.0.1",
    "redux-persist-webextension-storage": "^1.0.2",
    "wouter": "^2.12.1"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "4.1.1",
    "@types/chrome": "0.0.251",
    "@types/node": "20.9.0",
    "@types/react": "18.2.37",
    "@types/react-dom": "18.2.15",
    "@types/redux-persist-webextension-storage": "^1.0.3",
    "autoprefixer": "^10.4.16",
    "baseline-browser-mapping": "^2.8.32",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "npm-check-updates": "^17.1.10",
    "postcss": "^8.4.33",
    "prettier": "^3.0.3",
    "tailwindcss": "^3.4.1",
    "typescript": "5.2.2"
  },
  "manifest": {
    "host_permissions": [
      "https://*/*"
    ],
    "permissions": [
      "audio",
      "bookmarks",
      "browsingData",
      "downloads",
      "history",
      "tabs",
      "storage",
      "notifications"
    ],
    "web_accessible_resources": [
      {
        "resources": [
          "static/onboarding.html"
        ],
        "matches": [
          "https://mail.google.com/*"
        ]
      }
    ]
  }
}